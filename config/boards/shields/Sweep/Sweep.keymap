    keymap {
        compatible = "zmk,keymap";

                base_layer {
// -------------------------------    -------------------------------
// |  P  |  K  |  D  |  L  |  W  |    |  F  |  C  |  O  |  U  |  Y  |
// |  N  |  H  |  T  |  R  |  J  |    |  G  |  S  |  A  |  E  |  I  |
// | wCP |  B  |  M  |  V  |  <  |    |  >  |  Z  |  Q  |  X  | mCP |
//        | _NAV(=) | _SYM(BSPC) |    | _NAV(SPC) | _SYM(+) |
                        bindings = <
   &kp P        &kp K        &kp D       &kp L        &kp W           &kp F  &kp C        &kp O       &kp U        &kp Y
   &hml LALT N  &hml LCTRL H &hml LGUI T &hsl LSHFT R &kp J           &kp G  &hsr LSHFT S &hmr LGUI A &hmr LCTRL E &hmr LALT I 
   &win_cp      &kp B        &kp M       &kp V        &kp LT          &kp GT &kp Z        &kp Q       &kp X        &mac_cp
                                     &bst _NAV EQUAL  &bst _SYM BSPC  &spt _NAV SPACE  &spt _SYM PLUS
                        >;
                };

                nav_layer {
// -------------------------------    ---------------------------------
// | . , |  7  |  8  |  9  | INS |    | pUP | HOME |  UP | END  | ESC |
// |  0  |  4  |  5  |  6  | PSC |    | pDN | LEFT | SPC | RGHT | RET |
// |  v. |  1  |  2  |  3  |  v- |    |  v+ | TAB  |  DN | DEL  | APP |
//                  | RET | BSPC |    | LSFT | BSPC |
                        bindings = <
   &kp KP_DOT    &kp N7        &kp N8       &kp N9        &kp INS         &kp PG_UP    &kp HOME        &kp UP          &kp END          &kp ESC
   &hml LALT N0  &hml LCTRL N4 &hml LGUI N5 &hsl LSHFT N6 &kp PSCRN       &kp PG_DN    &hsr LSHFT LEFT &hmr LGUI SPACE &hmr LCTRL RIGHT &hmr LALT RET
   &kp C_MUTE    &kp N1        &kp N2       &kp N3        &kp C_VOL_DN    &kp C_VOL_UP &kp TAB         &kp DOWN        &kp DEL          &kp K_APP
                                                &kp RET   &bst _SYM BSPC  &kp LSHFT    &kp BSPC
                        >;
                };
                
                sym_layer {
// -------------------------------    -------------------------------
// |  \  |  |  |  _  |  =  |  {  |    |  }  |  "  |  ;  |  :  |  !  |
// |  /  |  *  |  -  |  +  |  (  |    |  )  |  '  |  ,  |  .  |  ?  |
// |  `  |  &  |  ^  |  %  |  [  |    |  ]  |  @  |  #  |  $  |  ~  |
//                  |     | BSPC |    | SPC | BSPC |
                        bindings = <
   &kp BSLH        &kp PIPE        &kp UNDER       &kp EQUAL       &kp LBRC      &kp RBRC &kp DQT        &kp SEMI        &kp COLON      &kp EXCL
   &hml LALT SLASH &hml LCTRL STAR &hml LGUI MINUS &hsl LSHFT PLUS &kp LPAR      &kp RPAR &hsr LSHFT SQT &hmr LGUI COMMA &hmr LCTRL DOT &hmr LALT QMARK
   &kp GRAVE       &kp AMPS        &kp CARET       &kp PRCNT       &kp LBKT      &kp RBKT &kp AT         &kp HASH        &kp DLLR       &kp TILDE
                                                          &none    &kp BSPC      &spt _NAV SPACE  &kp BSPC
                        >;
                };

                btf_layer {
// -------------------------------    ------------------------------
// | BT1 | BT2 | BT3 | BT4 | BT5 |    | F1 | F2  | F3  | F4  | F5  |
// | ALT | CTL | GUI | SFT | USB |    | F6 | F7  | F8  | F9  | F10 |
// |     |  v- |  v. |  v+ |     |    |    | F11 | F12 | APP |     |
//                   |     |     |    |    |     |
                        bindings = <
   &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &kp F1 &kp F2  &kp F3  &kp F4    &kp F5       
   &kp LALT     &kp LCTRL    &kp LGUI     &kp LSHFT    &out OUT_TOG   &kp F6 &kp F7  &kp F8  &kp F9    &kp F10
   &none        &kp C_VOL_DN &kp C_MUTE   &kp C_VOL_UP &none          &none  &kp F11 &kp F12 &kp K_APP &none         
                                                &none   &none         &none  &none
                        >;
                };                
    };
